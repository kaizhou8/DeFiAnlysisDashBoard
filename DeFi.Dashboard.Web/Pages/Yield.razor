@page "/yield"

<PageTitle>Yield Farming</PageTitle>

<h1>Yield Farming Opportunities</h1>

<div class="row mb-4">
    <div class="col-md-8">
        <div class="input-group">
            <input type="text" class="form-control" placeholder="Search yield farms..." />
            <button class="btn btn-primary" type="button">Search</button>
        </div>
    </div>
    <div class="col-md-4 text-end">
        <div class="dropdown d-inline-block me-2">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="riskDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                All Risk Levels
            </button>
            <ul class="dropdown-menu" aria-labelledby="riskDropdown">
                <li><a class="dropdown-item" href="#">All Risk Levels</a></li>
                <li><a class="dropdown-item" href="#">Low Risk</a></li>
                <li><a class="dropdown-item" href="#">Medium Risk</a></li>
                <li><a class="dropdown-item" href="#">High Risk</a></li>
            </ul>
        </div>
        <div class="dropdown d-inline-block">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Sort by APY
            </button>
            <ul class="dropdown-menu" aria-labelledby="sortDropdown">
                <li><a class="dropdown-item" href="#">APY (High to Low)</a></li>
                <li><a class="dropdown-item" href="#">TVL (High to Low)</a></li>
                <li><a class="dropdown-item" href="#">Risk (Low to High)</a></li>
            </ul>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var farm in farms)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div class="d-flex align-items-center">
                        <div class="farm-icon me-2">@farm.Icon</div>
                        <h5 class="mb-0">@farm.Name</h5>
                    </div>
                    <span class="badge bg-@farm.RiskColor">@farm.RiskLevel</span>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <div class="small text-muted">Protocol</div>
                        <div class="fw-bold">@farm.Protocol</div>
                    </div>
                    <div class="mb-3">
                        <div class="small text-muted">Chain</div>
                        <div class="fw-bold"><span class="badge bg-secondary">@farm.Chain</span></div>
                    </div>
                    <div class="mb-3">
                        <div class="small text-muted">APY</div>
                        <div class="fw-bold text-success">@farm.Apy%</div>
                        <div class="small text-muted">@farm.ApyBreakdown</div>
                    </div>
                    <div class="mb-3">
                        <div class="small text-muted">TVL</div>
                        <div class="fw-bold">$@farm.Tvl</div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <button class="btn btn-sm btn-outline-primary">Details</button>
                    <button class="btn btn-sm btn-success">Invest</button>
                </div>
            </div>
        </div>
    }
</div>

<div class="card mt-4">
    <div class="card-header">Yield Farming Strategies</div>
    <div class="card-body">
        <p>Recommended strategies based on your risk profile and portfolio will be displayed here.</p>
    </div>
</div>

